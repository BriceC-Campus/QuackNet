{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <a href="{{ path('app_quack_index') }}">back to list</a>
    <h1>Quack</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Owner</th>
            <td>{{ quack.duck.duckname }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ quack.id }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ quack.content }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('app_quack_edit', {'id': quack.id}) }}">edit</a>

    {{ include('quack/_delete_form.html.twig') }}
{% endblock %}
