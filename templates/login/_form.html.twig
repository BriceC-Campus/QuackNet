<fieldset class="row">
    <form action="{{ path('app_login') }}" method="post">
        <div class="form-floating mb-3 col-12 col-md-2">
            <input type="text" id="username" name="_username" class="form-control" placeholder="password" value="{{ last_username }}">
            <label for="username" class="ms-2">Email</label>
        </div>

        <div class="form-floating mb-3 col-12 col-md-2">
            <input type="password" id="password" name="_password" class="form-control" placeholder="password">
            <label for="password" class="ms-2">Password</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary">login</button>
    </form>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</fieldset>

